APP_ENV=development
APP_DEBUG=false
APP_KEY=

# URL de base
BASE_URL=http://localhost/Plaza-Movil-Definitivo

# DB (recomendado para XAMPP local con MySQL)
DB_URL=mysql://root:@127.0.0.1:3306/agro_app
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=agro_app
DB_USERNAME=root
DB_PASSWORD=

# Si necesitas usar PostgreSQL o un servicio remoto, descomenta y ajusta las siguientes líneas
# DB_URL=postgresql://postgres:postgres@localhost:5432/plaza_movil
# DB_HOST=your_remote_host
# DB_PORT=5432
# DB_DATABASE=your_db
# DB_USERNAME=your_user
# DB_PASSWORD=your_password

RAILWAY_ENVIRONMENT=production
LOG_CHANNEL=single
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync

# SMTP para recuperación de contraseña (MailHog/Mailpit local)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=none
MAIL_FROM_ADDRESS=no-reply@plazamovil.local
MAIL_FROM_NAME="Plaza Móvil"
